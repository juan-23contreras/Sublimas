<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hecho.MenuInicio">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/ivLogLogo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="55dp"
                android:layout_marginTop="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/imagenes1" />

            <TextView
                android:textColor="@color/cardview_shadow_start_color"
                android:textStyle="bold"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ivSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/app_name" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/cardview_dark_background"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ivSignIn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Elije como quieres iniciar sesion" />


            <Button
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/btnregistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/circular_button_shape"
                android:text="Iniciar como admid"
                android:textColor="#FFFFFF" />


            <Button
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/circular_button_shape"
                android:id="@+id/btnlogin"
                android:paddingRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:text="Iniciar cliente" />




        </LinearLayout>



    </ScrollView>

</RelativeLayout>